<?xml version="1.0" encoding="utf-8"?>
<com.apachat.swipereveallayout.core.SwipeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeAccount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:mode="same_level"
    app:dragEdge="right"
    android:background="@color/blanched_almond">

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/layout_swipe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_account"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#d2691e"
            android:layout_gravity="center"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- Your main layout here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_email_account"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Email"
                android:gravity="left|center"
                android:paddingStart="5dp"
                android:textColor="@color/gray"
                android:textSize="15sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_name_account"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:paddingStart="5dp"
                android:gravity="left|center"
                android:text="Trịnh Hữu Tiến"
                android:textColor="@color/gray"
                android:textSize="15dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_phone_account"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:paddingStart="5dp"
                android:gravity="left|center"
                android:text="1234567890"
                android:textColor="@color/gray"
                android:textSize="15dp" />

    </LinearLayout>
</com.apachat.swipereveallayout.core.SwipeLayout>


