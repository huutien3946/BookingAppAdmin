<?xml version="1.0" encoding="utf-8"?>
<com.apachat.swipereveallayout.core.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeTicket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PrimaryColor"
    app:dragEdge="right"
    app:mode="same_level">

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/layout_swipe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_ticket"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#d2691e"
            android:text="Disable"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <!-- Your main layout here -->
    <LinearLayout
        android:id="@+id/linear_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/NewTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Room:" />

            <TextView
                android:id="@+id/tv_type_room_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="25dp"
                android:hint="Select Room Type" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/NewTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curent Date:" />

            <TextView
                android:id="@+id/tv_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="25dp"
                android:hint="Select Room Type" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ChkIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/calendar"
                android:hint="Check In Date"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" To "
                android:textSize="25dp"
                android:layout_marginEnd="10dp"/>


            <TextView
                android:id="@+id/ChkOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CheckOutDate"
                android:textSize="25dp" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_email_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/gmail"
            android:drawablePadding="10dp"
            android:hint="usergamil.com"
            android:textSize="25dp" />

    </LinearLayout>


</com.apachat.swipereveallayout.core.SwipeLayout>


